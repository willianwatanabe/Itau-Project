@model ClientModel

@{
    ViewData["Title"] = "Editar";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/pages/client/cadastrar.css" />

<form asp-controller="Client" asp-action="Edit" method="post">
    <div class="title">
        <h1>Alterar dados do cliente</h1>
        <medium>Preencha os dados abaixo</medium>
    </div>

    @Html.HiddenFor(x => x.Id)

    <div>
        <label class="form-label required">Nome do cliente</label>
        <input asp-for="Name" type="text" class="form-control" required>
    </div>

    <div>
        <label class="form-label required">CPF</label>
        <input id="cpfcampo" oninput="mascara(this)" onblur="mascara(this)" asp-for="Cpf" type="text" maxlength="11" class="form-control" required>
    </div>

    <div>
        <label class="form-label required">Nascimento</label>
        <input asp-for="Birth" type="date" class="form-control" required>
    </div>

    <div>
        <label class="form-label required">Sexo</label>
        <select asp-for="Gender" class="form-control">
            <option value=0>Masculino</option>
            <option value=1>Feminino</option>
            <option value=2>Indefinido</option>
        </select>
    </div>

    <div>
        <label class="form-label required">Endereço</label>
        <input asp-for="Address" type="text" class="form-control" min="4" required>
    </div>

    <div>
        <label class="form-label required">Celular</label>
        <input asp-for="PhoneNumber" onkeypress="mask(this, mphone);" onblur="mask(this, mphone);" type="text" class="form-control" required>
    </div>

    <div>
        <label class="form-label">Ocupação</label>
        <input asp-for="Profession" type="text" class="form-control">
    </div>

    <div class="actions">
        <a class="btn btn-secondary left" asp-action="Index">Voltar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

<script src="~/js/views/register.js" type="application/javascript"></script>
